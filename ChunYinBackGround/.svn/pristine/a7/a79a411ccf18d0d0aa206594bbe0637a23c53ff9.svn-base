	 /**
     * 生成随机数
     * @param num 位数
     * @return
     */
    public static String createRandomNum(int num){
     String randomNumStr = "";
     for(int i = 0; i < num;i ++){
      int randomNum = (int)(Math.random() * 10);
      randomNumStr += randomNum;
     }
     return randomNumStr;
    }
}
